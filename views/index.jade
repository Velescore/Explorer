          span.tile-label-value(data-entity-id='market.price', data-attribute='total_supply', data-format='number', data-fixed-decimals='0', data-title='{total_supply} VLS', data-unit='VLS')
      .header-tile
        .tile-label
          | Maximum supply
          span.tile-label-value(data-entity-id='market.price', data-attribute='max_supply', data-format='number', data-fixed-decimals='0', data-title='{max_supply} VLS', data-unit='VLS')
      .header-tile
